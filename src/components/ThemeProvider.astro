---
import { useSettings } from '../lib/queries/settings';
const settings = await useSettings();
---

<style is:global lang="postcss">
  /* Sequel Sans Regular */
  @font-face {
    font-family: 'Sequel Sans';
    src: url('/fonts/body/woff2/Sequel Sans Roman Body.woff2') format('woff2');
    font-weight: 400;
    font-style: normal;
  }

  /* Sequel Sans Bold */
  @font-face {
    font-family: 'Sequel Sans';
    src: url('/fonts/body/woff2/Sequel Sans Bold Body.woff2') format('woff2');
    font-weight: 700;
    font-style: normal;
  }

  /* Sequel Sans Italic */
  @font-face {
    font-family: 'Sequel Sans';
    src: url('/fonts/body/woff2/Sequel Sans Oblique Body.woff2') format('woff2');
    font-weight: 400;
    font-style: italic;
  }

  /* Sequel Sans Bold Italic */
  @font-face {
    font-family: 'Sequel Sans';
    src: url('/fonts/body/woff2/Sequel Sans Bold Obl Body.woff2') format('woff2');
    font-weight: 700;
    font-style: italic;
  }

  /* Monument Extended */
  @font-face {
    font-family: 'Monument Extended';
    src: url('/fonts/heading/woff2/MonumentExtended-Regular.woff2') format('woff2');
    font-weight: 400;
    font-style: normal;
  }

  @font-face {
    font-family: 'Monument Extended';
    src: url('/fonts/heading/woff2/MonumentExtended-Ultrabold.woff2') format('woff2');
    font-weight: 800;
    font-style: normal;
  }

  :root {
    --font-body: 'Sequel Sans', sans-serif;
    --font-heading: 'Monument Extended', sans-serif;
  }

  body {
    font-family: var(--font-body);
    font-weight: 400; /* Ensure the default weight is set */
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    font-size: revert;
    line-height: revert;
    margin: revert;
  }
</style>


<slot />